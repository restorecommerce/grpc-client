{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
     "./src/**/*.ts", "./test/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
